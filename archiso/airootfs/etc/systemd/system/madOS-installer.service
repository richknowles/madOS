[Unit]
Description=madOS Interactive Installer
After=network.target
ConditionKernelCommandLine=archisobasedir

[Service]
Type=simple
ExecStart=/root/install.sh
StandardInput=tty
StandardOutput=tty
StandardError=tty
TTYPath=/dev/tty1
TTYReset=yes
TTYVHangup=yes
KillMode=process

[Install]
WantedBy=multi-user.target
